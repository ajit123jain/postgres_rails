<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Forgot your password? </strong>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>
            <fieldset>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-envelope fa"></i>
                      </span> 
                      <%= f.email_field :email, class: "form-control email", placeholder: "Enter your Email" ,autofocus: true %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Send me instructions", class:"btn btn-lg btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>  
        </div>
        <div class="panel-footer ">
          Already have an account! <b><%= render "devise/shared/links" %></b>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Code commented for old devise forgot password -->
