<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Edit <%= resource_name.to_s.humanize %></strong>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
            <fieldset>
              <!-- <div class="row">
                <div class="center-block">
                  <img class="profile-img"
                    src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                </div>
              </div> -->
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-envelope fa"></i>
                      </span> 
                      <%= f.email_field :email, class: "form-control email", placeholder: "Enter your Email" ,autofocus: true %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password, class: "form-control password", placeholder: "Enter your Password" ,autocomplete: "off" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <% if @minimum_password_length %>
                        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
                      <!-- <% end %><br /> -->
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password_confirmation, class: "form-control password", placeholder: "Confirm your Password" ,autocomplete: "off" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :current_password, class: "form-control current_password", placeholder: "Enter your current Password" ,autocomplete: "off" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Update", class:"btn btn-lg btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>  
          <!-- </form> -->
        </div>
        <div class="panel-footer ">
          <b><%= link_to "Back", :back %></b>
        </div>
      </div>
    </div>
  </div>
</div>

<% if false %>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  
<% end %>