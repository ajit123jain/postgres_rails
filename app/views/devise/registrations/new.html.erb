<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong> Sign Up</strong>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
            <fieldset>
              <div class="row">
                <div class="center-block">
                  <img class="profile-img"
                    src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-envelope fa"></i>
                      </span> 
                      <%= f.email_field :email, class: "form-control email", placeholder: "Enter your Email" ,autofocus: true %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password, class: "form-control password", placeholder: "Enter your Password" ,autocomplete: "off" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <% if @minimum_password_length %>
                        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
                      <!-- <% end %><br /> -->
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password_confirmation, class: "form-control password", placeholder: "Confirm your Password" ,autocomplete: "off" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>  
        </div>
        <div class="panel-footer ">
          Already have an account! <b><%= render "devise/shared/links" %></b>
        </div>
      </div>
    </div>
  </div>
</div>
<style type="text/css">
  .panel-heading {
    padding: 5px 15px;
  }

  .panel-footer {
    padding: 1px 15px;
    color: #A0A0A0;
  }

  .profile-img {
    width: 96px;
    height: 96px;
    margin: 0 auto 10px;
    display: block;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
  }
</style>

<!-- Default Devise Signup code commented -->
<% if false %>
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
<% end %>
